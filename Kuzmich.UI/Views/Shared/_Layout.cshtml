<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kuzmich.UI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/Kuzmich.UI.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        <div class="container">
            <!-- Панель навигации -->
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <!-- меню сайта -->
                <a class="navbar-brand" 
                            asp-controller="Home"
                            asp-action="Index">Kuzmich</a>
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" 
                            asp-controller="Home"
                            asp-action="Index">Лб 2</a>
                    <a class="nav-item nav-link" 
                            asp-controller="Product"
                            asp-action="Index">Каталог</a>
                    <a class="nav-item nav-link" 
                            asp-area="Admin"
                            asp-page="/Index">Администрирование</a>
                </div>
                <!-- меню сайта - конец -->
                <!-- Информация пользователя -->
                <a asp-controller="Cart" asp-action="Index" class="navbar-text ms-auto">
                    00,0 руб <i class="fa-solid fa-cart-shopping"></i> (0)
                </a>
                <div class="dropdown ms-4 nav-color">
                    <button class="btn btn-secondary dropdown-toggle"
                            type="button" id="dropdownMenuButton"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        sergei.kuzmich@gmail.com
                        <img src="images/аватарка.jpg" width="30"
                             alt="User" class="rounded nav-color" />
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li>
                            <span class="dropdown-item-text">
                                <img src="images/аватарка.jpg"
                                     width="50" alt="User" class="rounded" />
                                sergei.kuzmich@gmail.com
                            </span>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li class="px-3 pb-2">
                            <form id="logoutForm" class="form-inline" 
                                    asp-area="Identity"
                                    asp-page="/Account/Logout">
                                <button id="logout" type="submit" class="btn btn-outline-dark w-100">
                                    Выход
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
                <!-- Информация пользователя - конец -->
            </nav> <!-- Панель навигации - конец -->
        </div> <!-- container - конец -->
    </header> <!-- header - конец -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="navbar navbar-dark navbar-expand-md bg-dark">
                <div class="navbar-nav ms-auto">
                    <a class="nav-item nav-link" href="https://www.facebook.com">
                        <i class="fa-brands fa-facebook-f fa-2x"></i>
                    </a>
                    <a class="nav-item nav-link" href="https://vk.com/">
                        <i class="fa-brands fa-vk fa-2x"></i>
                    </a>
                    <a class="nav-item nav-link" href="https://x.com/">
                        <i class="fa-brands fa-square-x-twitter fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
