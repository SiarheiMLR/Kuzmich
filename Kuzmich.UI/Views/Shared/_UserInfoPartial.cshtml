@using Microsoft.AspNetCore.Identity

@if (User.Identity.IsAuthenticated)
{
    @await Component.InvokeAsync("Cart")

    <div class="dropdown ms-4 nav-color">
        <button class="btn btn-secondary dropdown-toggle"
                type="button" id="dropdownMenuButton"
                data-bs-toggle="dropdown"
                aria-expanded="false">
            @User.Identity?.Name
            <img src="@Url.Action("GetAvatar", "Image")?email=@User.Identity.Name"
                 width="30" alt="User" class="rounded bg-light" />
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li>
                <span class="dropdown-item-text">
                    <img src="@Url.Action("GetAvatar", "Image")?email=@User.Identity.Name"
                         width="30" alt="User" class="rounded bg-light" />
                    @User.Identity?.Name
                </span>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li class="px-3 pb-2">
                <form id="logoutForm" class="form-inline"
                      asp-area="Identity"
                      asp-route-returnurl="/"
                      asp-page="/Account/Logout">
                    <button id="logout" type="submit" class="btn btn-outline-dark w-100">
                        Выход
                    </button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <div class="navbar-nav ms-auto">
        <li class="nav-item">
            <a class="nav-link nav-color" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-color" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </div>
    
}