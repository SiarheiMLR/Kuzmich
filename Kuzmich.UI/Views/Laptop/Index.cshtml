@using Kuzmich.Domain.Models
@using Kuzmich.Domain.Entities
@model ListModel<Laptop>

@{
    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();
}

@{
    var categories = ViewData["categories"] as List<Category>;
    var currentCategory = ViewData["currentCategory"] as string;
}

<h2 class="mt-3">Каталог ноутбуков</h2>

<!-- Фильтр по категориям -->
<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <select name="category" class="form-select">
                <option value="">Все категории</option>
                @if (categories != null)
                {
                    foreach (var cat in categories)
                    {
                        <option value="@cat.NormalizedName" selected="@(cat.NormalizedName == currentCategory)">
                            @cat.Name
                        </option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary" type="submit">Фильтровать</button>
        </div>
    </div>
</form>

<!-- Карточки ноутбуков -->
<div class="row">
    @foreach (var laptop in Model.Items)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="image-container">
                    <img src="~/images/@laptop.Image" alt="@laptop.Name" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@laptop.Name</h5>
                    <p class="card-text">@laptop.Description</p>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <strong>@laptop.Price руб.</strong>
                    <div>
                        <a class="btn btn-sm btn-outline-secondary me-2"
                           asp-action="Details"
                           asp-controller="Laptop"
                           asp-route-id="@laptop.Id">
                            Подробнее
                        </a>
                        <a class="btn btn-sm btn-outline-success"
                           asp-controller="Cart"
                           asp-action="Add"
                           asp-route-id="@laptop.Id"
                           asp-route-returnurl="@returnUrl">
                            В корзину
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

