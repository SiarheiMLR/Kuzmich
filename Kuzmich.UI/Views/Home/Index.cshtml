<h3>@ViewData["Text"]</h3>
<h5 class ="mt-4">Список</h5>

<ol type="A">
    @for (int i = 0; i < 5; i++)
    {
        <li>элемент @i списка</li>
    }
</ol>

<hr />

<h5 class="mt-4">Форма</h5>
<form role="form" method="post">
            <!-- Список -->
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <select class="form-select" asp-items="Model" name="selDemo"></select>
                </div>
            </div>
            
            <!-- Чекбоксы -->
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="check1" id="check1">
                        <label class="form-check-label" for="check1">
                            Чек-бокс 1
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="check2" id="check2">
                        <label class="form-check-label" for="check2">
                            Чек-бокс 2
                        </label>
                    </div>
                </div>
            </div>

            <!-- Радио кнопки -->
            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0"></legend>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="radioOption" id="radio1" value="1" checked>
                        <label class="form-check-label" for="radio1">
                            Радио-1
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="radioOption" id="radio2" value="2">
                        <label class="form-check-label" for="radio2">
                            Радио-2
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="radioOption" id="radio3" value="3">
                        <label class="form-check-label" for="radio3">
                            Радио-3
                        </label>
                    </div>
                </div>
            </fieldset>

            <!-- Логин -->
            <div class="row mb-3">
                <label for="login" class="col-sm-2 col-form-label">Логин:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="login" id="login" placeholder="Введите имя" required>
                </div>
            </div>

            <!-- Пароль -->
            <div class="row mb-3">
                <label for="password" class="col-sm-2 col-form-label">Пароль:</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Введите пароль" required>
                </div>
            </div>

            <!-- Кнопка отправки -->
            <div class="row mb-3">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </div>
            </div>
        </form>   

   
